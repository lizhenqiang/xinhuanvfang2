<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/game_nan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="男 子"
            android:textSize="16sp" />
        <Button
            android:id="@+id/weight1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/background_select"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="~60KG"
            android:textColor="@color/main_text"
            android:textSize="12sp" />

        <Button
            android:id="@+id/weight2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/background_select"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="61~90KG"
            android:textSize="12sp" />

        <Button
             android:id="@+id/weight3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/background_select"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="91KG~"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="女 子"
            android:textSize="16sp" />
        <Button
            android:id="@+id/weight4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/background_select"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="~48KG"
            android:textSize="12sp" />

        <Button
             android:id="@+id/weight5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/background_select"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="49~60KG"
            android:textSize="12sp" />

        <Button
            android:id="@+id/weight6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/background_select"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="61KG~"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/weight7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/background_select"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="@string/shandong"
            android:textSize="12sp" />

        <Button
             android:id="@+id/weight8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/background_select"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="@string/nanjing"
            android:textSize="12sp" />

        <Button
            android:id="@+id/weight9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/background_select"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="@string/xian"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>